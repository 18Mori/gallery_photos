<div class="bg-white rounded-lg shadow p-6 mb-6">
            <h2 class="text-xl font-semibold text-gray-700 mb-4">Your Profile</h2>
            <p class="text-gray-600 mb-2">Username: {{ user.username }}</p>
            <p class="text-gray-600 mb-2">Email: {{ user.email }}</p>
            {% if user.profile %}
            <p class="text-gray-600">Height: {{ user.profile.height }} cm</p>
            <p class="text-gray-600">Weight: {{ user.profile.weight }} kg</p>
            {% else %}
            <p class="text-gray-600">Please complete your profile.</p>
            {% endif %}
            <a href="{% url 'profile' %}" class="text-blue-600 hover:text-blue-800 font-medium transition-colors">Edit Profile</a>
        </div>